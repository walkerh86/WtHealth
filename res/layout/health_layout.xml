<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg" 
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout         
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView 
            android:textSize="28.0sp" 
            android:textColor="#ffffffff" 
            android:id="@id/tips" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true"
            android:text="@string/app_name" />
        <TextView
            android:id="@+id/step_sep"
            android:layout_below="@id/tips"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            style="@style/steps_style"
            android:text="@string/step_seprator"/>
        <TextView 
                android:id="@id/steps_value" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@id/step_sep"
                android:layout_below="@id/tips"
                style="@style/steps_style"  />
        <TextView 
                android:text="@string/steps"
                android:id="@+id/steps_tips" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_toLeftOf="@id/step_sep"
                android:layout_below="@id/tips"
                style="@style/steps_style" />        
        
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal" 
                android:id="@id/distance_layout" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_below="@id/step_sep" 
                android:layout_centerHorizontal="true">
                <TextView android:textSize="28.0sp" 
                    android:textColor="#ffa09326" 
                    android:gravity="center" 
                    android:id="@+id/distance_value" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="30.0dip" 
                    android:shadowColor="#33000000" />
                <TextView android:textSize="28.0sp" 
                    android:textColor="#ffa09326" 
                    android:gravity="center" 
                    android:id="@+id/distance_unit" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:text="@string/unit_km"
                    android:shadowColor="#33000000" />
                <TextView 
                    android:textSize="30.0sp" 
                    android:textColor="#ddffffff" 
                    android:gravity="center" 
                    android:id="@+id/time_value" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="30.0dip" 
                    android:shadowColor="#33000000" />
            </LinearLayout>
        
    </RelativeLayout>
    
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <Button android:textSize="24.0sp" android:id="@+id/control_start" android:background="@drawable/button_start" android:padding="3.0dip" android:layout_width="60.0dip" android:layout_height="60.0dip" />
            <Button android:textSize="24.0sp" android:id="@+id/control_stop" android:background="@drawable/button_stop" android:padding="3.0dip" android:visibility="visible" android:layout_width="60.0dip" android:layout_height="60.0dip" android:layout_marginLeft="10.0dip" />
            <Button android:textSize="24.0sp" android:id="@+id/control_restart" android:background="@drawable/button_restart" android:padding="3.0dip" android:visibility="gone" android:layout_width="60.0dip" android:layout_height="60.0dip" android:layout_marginLeft="10.0dip" />
        </LinearLayout>
</RelativeLayout>